@model KutuphaneMvc.Models.Entity.EMANET
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
@{
    ViewBag.Title = "Emanet";
    var uyeler = ViewBag.Uyeler as IEnumerable<System.Web.Mvc.SelectListItem> ?? new List<System.Web.Mvc.SelectListItem>();
    var kitaplar = ViewBag.Kitaplar as IEnumerable<System.Web.Mvc.SelectListItem> ?? new List<System.Web.Mvc.SelectListItem>();
}

@using (Html.BeginForm("EmanetKaydet", "Emanet", FormMethod.Post))
{

    <div class="form-group">
        <label>Kitap</label>
        @Html.DropDownListFor(m => m.KITAP_ID, new SelectList(ViewBag.BookList, "KITAP_ID", "AD"), "Kitap seçiniz", new { @class = "form-control js-example-basic-single", required = "required" })
    </div>

    <div class="form-group">
        <label>Üye</label>
        @Html.DropDownListFor(m => m.UYE_ID, new SelectList(ViewBag.UserList, "UserID", "AdSoyad"), "Üye seçiniz", new { @class = "form-control js-example-basic-single", required = "required" })
    </div>

    <div class="form-group">
        <label>Alınış Tarihi</label>
        @Html.TextBoxFor(m => m.ALINIS_TARIHI, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Teslim Tarihi</label>
        @Html.TextBoxFor(m => m.TESLIM_TARIHI, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control", required = "required" })
    </div>

    @Html.HiddenFor(m => m.TESLIM_EDILDI_MI, new { Value = false }) <!-- default 0 -->
    @Html.HiddenFor(x => x.EMANET1)

    <button type="submit" class="btn btn-primary">Kaydet</button>
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
    </script>
}